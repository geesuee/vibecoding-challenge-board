generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("TRANSACTION_POOLER")
  directUrl = env("DIRECT_CONNECTION")
}

model Challenge {
  id            String   @id @default(cuid())
  name          String
  category      String
  description   String
  startDate     String
  endDate       String
  status        String   @default("active") // active, completed
  image         String?
  tasks         String   // JSON string of tasks
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  certifications Certification[]

  @@map("challenges")
}

model Certification {
  id          String    @id @default(cuid())
  challengeId String
  date        String
  createdAt   DateTime  @default(now())

  // Relations
  challenge Challenge @relation(fields: [challengeId], references: [id], onDelete: Cascade)

  @@unique([challengeId, date])
  @@map("certifications")
} 